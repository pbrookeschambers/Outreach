% #region Safety

\newwrite\safetyfile
\immediate\openout\safetyfile=\jobname.safety


\newcommand\safety[2][\@nil]{%
% Write to the meta file so that the cover sheet can read all of these
    \def\tmp{#1}
    \ifgiven{\tmp}{
        % We have a summary. Write this instead
        \write\safetyfile{\noexpand\item[\bfseries pg. \thepage~] #1}
    }{
        \write\safetyfile{\noexpand\item[\bfseries pg. \thepage~] #2}
    }
	\begin{warningbox}
		#2
	\end{warningbox}
}

% #endregion Safety

% #region Tasks

\newcounter{taskcounter}
\setcounter{taskcounter}{0}
\newcounter{subtaskcounter}[taskcounter]
\setcounter{subtaskcounter}{0}

\newcommand{\task}[1]{
    \def\tmp{#1}
    \stepcounter{taskcounter}
    \section{
        Task \thetaskcounter%
        \ifx\tmp\empty%
        \else: #1
        \fi
    }
}

\newcommand{\subtask}[1]{
    \def\tmp{#1}
    \stepcounter{subtaskcounter}
    \subsection{
        Task \thetaskcounter.\alph{subtaskcounter}%
        \ifx\tmp\empty%
        \else: #1
        \fi
    }
}

% #endregion Tasks

